{
  "name": "Metadata-Extractor",
  "version": "1.0.0",
  "description": "Metadata extractor for all the project Gutenberg titles",
  "main": "index.js",
  "scripts": {
    "test": "npm run test-junit-report && npm run test-coverage-report",
    "test-junit-report": "MOCHA_FILE=./junitResults.xml ./node_modules/.bin/mocha --exit -r ts-node/register 'src/**/*.spec.ts' --reporter mocha-junit-reporter",
    "test-coverage-report": "NODE_V8_COVERAGE=coverage c8 -o ./htmlcov/ --temp-directory ./htmlcov/tmp/ -r lcovonly -r html ./node_modules/.bin/mocha --exit -r ts-node/register 'src/**/*.spec.ts'",
    "test-dev": "./node_modules/.bin/mocha --exit -r ts-node/register 'src/**/*.spec.ts'",
    "bundle": "tsc -p tsconfig.json &&  NODE_ENV=prod  webpack-cli --env=prod --config webpack.config.js",
    "bundle.dev": "tsc -p tsconfig.json &&  NODE_ENV=dev  webpack-cli --env=dev --config webpack.config.js",
    "compile": "tsc -p tsconfig.json && node ./dist/index.js",
    "serve.prod": "NODE_ENV=prod nodemon -L --exec ts-node -- src/index.ts",
    "serve.dev": "NODE_ENV=dev TS_NODE_TRANSPILE_ONLY=true  nodemon -L --exec ts-node -- src/index.ts",
    "start": "npm run bundle && npm run serve.prod",
    "lint:fix": "tslint -c ./tslint.json -p ./tsconfig.json './src/**/*.ts'--fix",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json './src/**/*.ts'"
  },
  "keywords": [],
  "author": "",
  "license": "commercial",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/cheerio": "^0.22.18",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.8",
    "@types/sequelize": "^4.28.9",
    "@types/sinon": "^7.0.13",
    "@types/sinon-chai": "^3.2.2",
    "c8": "^5.0.1",
    "chai": "^4.2.0",
    "grunt": "^1.0.4",
    "grunt-prettier": "^1.3.0",
    "grunt-tslint": "^5.0.2",
    "mocha": "^6.2.0",
    "mocha-junit-reporter": "^1.23.1",
    "native-ext-loader": "^2.3.0",
    "nodemon": "^1.19.1",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "webpack": "^4.37.0",
    "webpack-cli": "^3.3.6"
  },
  "dependencies": {
    "async": "^3.2.0",
    "cheerio": "^1.0.0-rc.3",
    "pg": "^8.2.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.13",
    "sequelize-cli": "^5.5.1"
  }
}
